{% extends "base.html.twig" %}

{% block body %}

    {{ include ('Widget/_breadcrumb.html.twig', {title: 'Edit Your Profile', background: asset('assets/img/header/profile_large.jpg')}, with_context = false) }}
    {{ include ('Widget/_flashes.html.twig', {flashes: app.flashes}, with_context = false) }}
    {{ include ('Widget/_errors.html.twig', {form: form}, with_context = false) }}

    <div class="mag-login-area py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="login-content bg-white p-30 box-shadow">
                        <!-- Section Title -->

                        <div class="section-heading">
                            <h5>Edit Your Profile!</h5>
                        </div>

                        {% trans_default_domain 'FOSUserBundle' %}

                        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit', 'novalidate': 'novalidate' } }) }}

                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.gender) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.country) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.birthday, {'attr': {'autocomplete': 'off'}}) }}

                        <div class="form-group">
                            <div class="form-check">
                                {{ form_widget(form.consents) }}
                                {{ form_label(form.consents) }}
                            </div>
                        </div>

                        {{ form_row(form.current_password, {'attr': {'autocomplete': 'off'}}) }}

                        <div class="login-buttons">
                            <button type="submit" class="btn btn-primary btn-block btn-lg" formnovalidate><i class="fa fa-save"></i> {{ 'profile.edit.submit'|trans }} </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"></script>
    <script>
        $(document).ready(function () {

            $('.js-datepicker').datepicker({
                format: 'mm-dd-yyyy'
            });
        })
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/plugins/flag-icon/css/flag-icon.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('assets/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css') }}" rel="stylesheet"/>
{% endblock %}

