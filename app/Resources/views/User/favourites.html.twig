{% extends "base.html.twig" %}

{% block body %}

    {{ include ('Widget/_breadcrumb.html.twig', {title: 'Favourite Initiatives', background: asset('assets/img/header/initiative_large.jpg')}, with_context = false) }}

    {{ apy_breadcrumb_trail_render() }}

    {{ include ('Widget/_flashes.html.twig', {flashes: app.flashes}, with_context = false) }}

    <!-- ##### Login Area Start ##### -->
    <div class="wpe-content-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="login-content bg-white mb-30 p-30 box-shadow">

                        <div class="section-heading">
                            <h5>Favourites</h5>
                        </div>

                        {{ include ("User/list.html.twig", {initiatives: initiativesActive, title: 'Active Initiatives'}, with_context = false) }}

                        {{ include ("User/list.html.twig", {initiatives: initiativesFinished, title: 'Finished Initiatives'}, with_context = false) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- ##### Login Area End ##### -->

{% endblock body %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/plugins/DataTables/datatables.min.css') }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/plugins/DataTables/datatables.min.js') }}"></script>
    <script>

        $(document).ready(function() {
            $('table').DataTable();
        } );

    </script>

{% endblock %}