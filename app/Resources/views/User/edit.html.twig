{% extends "base.html.twig" %}

{% block body %}

    {{ include ('Widget/_breadcrumb.html.twig', {title: 'Edit Initiative', background: asset('assets/img/header/initiative_large.jpg')}, with_context = false) }}

    {{ apy_breadcrumb_trail_render() }}

    {{ include ('Widget/_flashes.html.twig', {flashes: app.flashes}, with_context = false) }}
    {{ include ('Widget/_errors.html.twig', {form: form}, with_context = false) }}

<!-- ##### Login Area Start ##### -->
<div class="wpe-content-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="default-content bg-white mb-30 p-30 box-shadow">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h5>Edit your Initiative</h5>
                    </div>

                    {{ form_start(form) }}

                        {{ form_row(form.category) }}
                        {{ form_row(form.title)}}
                        {{ form_row(form.description) }}
                        {{ form_row(form.duration) }}

                    <div class="form-group">
                        <label></label>
                        <div class="col-md-12 col-sm-12">
                            <button type="submit" class="btn btn-primary btn-block btn-lg" formnovalidate><i class="fas fa-save"></i> {{ 'initiative.button.submit'|trans }} </button>
                            {{ form_widget(form.publish) }}
                        </div>
                    </div>

                    {{ form_end(form) }}
                    <br />
                    <p>
                        {{ form_start(delete_form) }}
                        <a href="{{ path('user_initiative_index') }}" class="btn btn-dark"><i class="fas fa-bars"></i> {{ 'initiative.button.overview'|trans }} </a>
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> {{ 'initiative.button.delete'|trans }} </button>
                        {{ form_end(delete_form) }}
                    </p>

                </div>

            </div>
        </div>
    </div>
</div>
<!-- ##### Login Area End ##### -->

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

