{% extends "base.html.twig" %}

{% block body %}

    {{ include ('Widget/_breadcrumb.html.twig', {title: 'Edit Your Avatar', background: asset('assets/img/header/profile_large.jpg')}, with_context = false) }}

    {{ apy_breadcrumb_trail_render() }}

    {{ include ('Widget/_flashes.html.twig', {flashes: app.flashes}, with_context = false) }}

<div class="wpe-content-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="login-content bg-white p-30 box-shadow">
                    <!-- Section Title -->

                    <div class="section-heading">
                        <h5>Edit Your Avatar!</h5>
                    </div>

                    <div id="svgAvatars"></div>

                </div>

            </div>
        </div>
    </div>
</div>

{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/tools/svg.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/tools/jquery.scrollbar.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/tools/spectrum.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/tools/rgbcolor.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/tools/StackBlur.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/tools/canvg.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/svgavatars.defaults.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/languages/svgavatars.en.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/plugins/svgavatars/js/svgavatars.core.min.js') }}"></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/plugins/svgavatars/css/spectrum.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/plugins/svgavatars/css/svgavatars.css') }}"/>
{% endblock %}
