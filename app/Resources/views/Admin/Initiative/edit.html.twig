{% extends "base.html.twig" %}

{% block body %}
<!-- ##### Breadcrumb Area Start ##### -->
<section class="breadcrumb-area bg-img bg-overlay" style="background-image: url('https://via.placeholder.com/1920x850');">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2>Votes</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Breadcrumb Area End ##### -->

<!-- ##### Login Area Start ##### -->
<div class="mag-login-area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="login-content bg-white p-30 box-shadow">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h5>Edit Initiative!</h5>
                    </div>

                    {{ form_start(form) }}

                        {{ form_row(form.type)}}
                        {{ form_row(form.state)}}
                        {{ form_row(form.category) }}
                        {{ form_row(form.title)}}
                        {{ form_row(form.description) }}
                        {{ form_row(form.duration) }}
                        {{ form_row(form.slug) }}
                        {{ form_row(form.createdBy) }}
                        {{ form_row(form.createdAt) }}
                        {{ form_row(form.updatedBy) }}
                        {{ form_row(form.updatedAt) }}

                        <button type="submit" class="btn btn-primary" formnovalidate><i class="fa fa-save"></i> {{ 'initiative.button.submit'|trans }} </button>
                    {{ form_end(form) }}
                    <br />
                    <p>
                        {{ form_start(delete_form) }}
                        <a href="{{ path('admin_initiative_index') }}" class="btn btn-dark"><i class="fas fa-bars"></i> {{ 'initiative.button.overview'|trans }} </a>
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> {{ 'initiative.button.delete'|trans }} </button>
                        {{ form_end(delete_form) }}
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Login Area End ##### -->

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

