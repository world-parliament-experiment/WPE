
{% extends "base.html.twig" %}

{% block body %}


<!-- ##### Breadcrumb Area Start ##### -->
    <section class="breadcrumb-area bg-img bg-overlay" style="background-image: url('https://via.placeholder.com/1920x850');">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2>Edit User Profile</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
<!-- ##### Breadcrumb Area End ##### -->

<!-- ##### Login Area Start ##### -->
<div class="mag-login-area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <div class="login-content bg-white p-30 box-shadow">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h5>Edit User Profile!</h5>
                    </div>


                    {{ form_start(form) }}

                    <fieldset>

                    {# {{ form_row(form.username) }} #}

                    {# {{ form_row(form.email) }} #}

                    {{ form_row(form.firstname) }}

                    {{ form_row(form.lastname) }}
                    {{ form_row(form.gender) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.country) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.birthday) }}
                        <div class="form-group">
                            <label class="col-md-12 col-sm-18 control-label">{{ 'user.label.roles'|trans }}</label>
                            <div class="col-md-12 col-sm-12">
                                <ul style="margin-top: 7px; margin-left:15px">
                                    {% for role in roles %}
                                        <li style="list-style: disc">{{ role }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        {{ form_row(form.userroles) }}
                        {{ form_row(form.enabled) }}

                        {% if form.plainPassword is defined %}
                            {{ form_row(form.plainPassword) }}
                        {% endif %}


                    </fieldset>

                    <div class="login-buttons">
                        <button type="submit" class="btn btn-primary" formnovalidate><i class="fa fa-save"></i> {{ 'user.edit.submit'|trans }} </button>
                        {{ form_end(form) }}
                        <br />
                        <p>
                            {{ form_start(delete_form) }}
                            <a href="{{ path('admin_user_index') }}" class="btn btn-dark"><i class="fas fa-bars"></i> {{ 'user.button.overview'|trans }} </a>
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> {{ 'user.button.delete'|trans }} </button>
                            {{ form_end(delete_form) }}
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Login Area End ##### -->

    {% endblock body %}
    {% block javascripts %}
    {{ parent() }}
    <script> src="{{ asset('/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"</script>
    <script>
        $(document).ready(function() {

            $('.js-datepicker').datepicker({
                format: 'mm-dd-yyyy'
            });
        })
    </script>
</div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('/assets/plugins/flag-icon/css/flag-icon.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('/assets/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css') }}" rel="stylesheet" />

{% endblock %}
