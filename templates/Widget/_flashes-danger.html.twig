{% if flashes is not empty %}
	<div class="mag-flash-area">
		<div class="container">
			<div class="row justify-content-center">
				<div
					class="col-12 col-lg-8 mt-4">
					{# <div class="flash-content bg-danger p-30 box-shadow">
											<ul>
												{% for label, messages in flashes %}
													{% for message in messages %}
														<li class="d-block">
															<span class="form-flash-icon badge badge-danger text-uppercase">{{ label }}</span>
															<span class="form-flash-message">{{ message|trans }}</span>
														</li>
													{% endfor %}
												{% endfor %}
											</ul>
										</div> #}
					{% for label, messages in flashes %}
						<div class="alert alert-{{ label }} alert-dismissible fade show p-30 rounded" role="alert" id="success-alert">
							<ul>
								{% for message in messages %}
									<li class="d-block">
										{% if label == 'danger' %}
											<i class="fa fa-exclamation-triangle text-{{ label }}" aria-hidden="true"></i>
										{% else %}
											<i class="fa fa-check-circle text-{{ label }}" aria-hidden="true"></i>
										{% endif %}
										<span class="form-flash-message">{{ message|trans }}</span>
										<button type="button" class="close" data-dismiss="alert" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endif %}
