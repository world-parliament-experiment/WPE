{% extends 'layout.html.twig' %}

{% use ':Helpers:tabletrail.html.twig' with stylesheets as base_stylesheets, javascripts as base_javascripts %}

{% block body %}

    <div class="row">

        <div class="col-md-6">

            {{ panel_start("group.header.list"|trans) }}

            <table id="data-table" class="table table-striped table-bordered dt-responsive" width="100%" >
                <thead>
                <tr>
                    <th>{{ 'group.label.id'|trans }}</th>
                    <th>{{ 'group.label.name'|trans }}</th>
                    <th>{{ 'group.label.description'|trans }}</th>
                    <th>{{ 'group.label.roles'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for group in groups %}
                    <tr>
                        <td><a href="{{ path('fos_user_group_edit', { 'groupName': group.name }) }}">{{ group.id }}</a></td>
                        <td>{{ group.name }}</td>
                        <td>{{ group.description }}</td>
                        <td>{{ group.roles|join }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <p>
                <a href="{{ path("fos_user_group_new") }}" class="btn btn-success"><i class="fa fa-plus"></i> {{ 'group.button.add'|trans }} </a>
            </p>

            {{ panel_end() }}

        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ block('base_stylesheets') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ block('base_javascripts') }}
{% endblock %}

